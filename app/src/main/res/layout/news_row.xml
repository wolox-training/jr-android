<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/vNewsPhoto"
        android:layout_margin="@dimen/static_spacing_large"
        android:layout_width="@dimen/home_news_photo_side"
        android:layout_height="@dimen/home_news_photo_side"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:failureImage="@drawable/gradient_cover"
        fresco:roundedCornerRadius="@dimen/spacing_medium_extra" />

    <TextView
        android:id="@+id/vDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/static_spacing_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vNewsTitle"
        android:layout_width="@dimen/home_news_content_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/home_news_content_margin"
        android:layout_marginTop="@dimen/static_spacing_large"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/vNewsPhoto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vNewsContent"
        android:layout_width="@dimen/home_news_content_width"
        android:layout_height="@dimen/home_news_content_height"
        android:layout_marginStart="@dimen/home_news_content_margin"
        android:layout_marginBottom="@dimen/home_news_content_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vNewsPhoto"
        app:layout_constraintTop_toBottomOf="@+id/vNewsTitle" />

    <View
        android:id="@+id/vDivider"
        android:layout_width="@dimen/home_tab_layout_width"
        android:layout_height="@dimen/spacing_tiniest"
        android:background="@color/colorDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <CheckBox
        android:id="@+id/vLikeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/static_spacing_large"
        android:button="@drawable/icon_like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
